# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# anon public key (safe for frontend + server with RLS)
SUPABASE_ANON_KEY=your-anon-public-key-here

# service_role key (ADMIN KEY â€” DO NOT EXPOSE TO UI)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ============================================
# CORS CONFIGURATION
# ============================================
# You can add more origins separated by commas
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug

# ============================================
# SECURITY
# ============================================
# Custom admin API key for protected backend-only routes
ADMIN_API_KEY=super-secure-admin-key

# ============================================
# OPTIONAL FEATURES
# ============================================
# Rate limiting (requests per minute)
RATE_LIMIT=100

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true